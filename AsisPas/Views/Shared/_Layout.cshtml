<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AsisPas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
     <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta name="description" content="AsisPass, app para el control de acceso de empleados.">
    <meta name="keywords" content="admin, empleados, obreros, horarios, control, trabajo, automatismoslau, ferromining">
    <meta name="author" content="hikdul">
    <title>AsisPass</title>
    <link rel="apple-touch-icon" href="~/theme/theme-assets/images/ico/apple-icon-120.png">
    <link rel="shortcut icon" type="image/x-icon" href="~/theme/theme-assets/images/ico/favicon.ico">
    <link href="https://fonts.googleapis.com/css?family=Muli:300,300i,400,400i,600,600i,700,700i%7CComfortaa:300,400,700" rel="stylesheet">
    <link href="https://maxcdn.icons8.com/fonts/line-awesome/1.1/css/line-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/theme/theme-assets/css/vendors.css">
    <link rel="stylesheet" type="text/css" href="~/theme/theme-assets/vendors/css/charts/chartist.css">
    <link rel="stylesheet" type="text/css" href="~/theme/theme-assets/css/app-lite.css">
    <link rel="stylesheet" type="text/css" href="~/theme/theme-assets/css/core/menu/menu-types/vertical-menu.css">
    <link rel="stylesheet" type="text/css" href="~/theme/theme-assets/css/core/colors/palette-gradient.css">
    <link rel="stylesheet" type="text/css" href="~/theme/theme-assets/css/pages/dashboard-ecommerce.css">
     <link rel="stylesheet" type="text/css" href="~/css/login.css" />
</head>
<body class="vertical-layout vertical-menu 2-columns   menu-expanded fixed-navbar" data-open="click" data-menu="vertical-menu" data-color="bg-white" data-col="2-columns">
   
     @if (User.Identity.IsAuthenticated)
    {
        <header>
            <nav class="header-navbar navbar-expand-md navbar navbar-with-menu navbar-without-dd-arrow fixed-top navbar-semi-light">
                <div class="navbar-wrapper">
                    <div class="navbar-container content">
                        <div class="collapse navbar-collapse show" id="navbar-mobile">
                            <ul class="nav navbar-nav mr-auto float-left">
                                <li class="nav-item d-block d-md-none">
                                    <a class="nav-link nav-menu-main menu-toggle hidden-xs is-active p-0 pr-2" href="#">
                                        <i class="ft-align-right text-danger" style="font-size:2rem"></i>
                                    </a>
                                </li>
                                <li class="nav-item d-block d-md-none">
                                    <a class="nav-link nav-menu-main menu-toggle hidden-xs" href="#"><i class="ft-menu"></i></a></li>
                                <li class="nav-item nav-item dropdown">
                                    <h3 class="mb-0 text-dark text-encabezado-alau">@ViewBag.Encabezado</h3>
                                </li>
                            </ul>
                            <ul class="nav navbar-nav float-right">         

                            </ul>
                            <ul class="nav navbar-nav float-right">
                                <li class="dropdown dropdown-user nav-item">
                                    <a class="dropdown-toggle nav-link dropdown-user-link" href="#" data-toggle="dropdown">
                                        <p class="text-danger">@User.Identity.Name</p>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <div class="arrow_box_right">
                                        </div>
                                        <a class="dropdown-item" href="#"><i class="ft-user"></i> Perfil@correo.com</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="#"><i class="ft-power"></i> Salir</a>
                                    </div>

                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <!-- links para navegar-->
        <div class="main-menu menu-fixed menu-light menu-accordion menu-shadow" data-scroll-to-active="true" data-img="~/img/navbar.png">
            <div class="navbar-header">
        <ul class="nav navbar-nav flex-row">       
          <li class="nav-item mr-auto">
              <a class="navbar-brand" asp-controller="home" asp-action="Index">
                  <img class="brand-logo" alt="logo" src="~/img/logo.png"/>
              <h3 class="brand-text">AsisPass</h3></a></li>
          <li class="nav-item d-md-none"><a class="nav-link close-navbar"><i class="ft-x"></i></a></li>
        </ul>
      </div>
      <div class="main-menu-content">
        <ul class="navigation navigation-main" id="main-menu-navigation" data-menu="menu-navigation">
         
             <!--Reportes-->

          <li class="nav-item has-sub @ViewBag.ReporteMenu">
                 <a class="alert-dark" href="#">
                     <i class="la la-dot-circle-o text-dark"></i>
                     <span class="menu-title" data-i18n="">Reportes</span>
                 </a>
                 <ul class="menu-content">
                     <li class="is-shown @ViewBag.ReporteAsistenciaActive">
                         <a class="menu-item" asp-area="" asp-controller="ReporteAsistencia" asp-action="Index">
                             <i class="la la-building"></i>
                             Asistencia
                         </a>
                     </li>
                    <li class="is-shown @ViewBag.ReporteDomActive">
                         <a class="menu-item" asp-area="" asp-controller="ReporteDomigosYFeriados" asp-action="Index">
                             <i class="la la-building"></i>
                             Domingos Y Feriados
                         </a>
                     </li>
                     <li class="is-shown @ViewBag.CambioTActive">
                         <a class="menu-item" asp-area="" asp-controller="ReporteCambioDeTurno" asp-action="Index">
                             <i class="la la-building"></i>
                             Cambios De Turno
                         </a>
                     </li>
                </ul>
          
     

            
          <!--Empresa-->

          <li class="nav-item has-sub @ViewBag.EmpresaMenu">
                 <a class="alert-dark" href="#">
                     <i class="la la-dot-circle-o text-dark"></i>
                     <span class="menu-title" data-i18n="">Empresas</span>
                 </a>
                 <ul class="menu-content">
                     <li class="is-shown @ViewBag.EmpresaListActive">
                         <a class="menu-item" asp-area="" asp-controller="Empresa" asp-action="Index">
                             <i class="la la-building"></i>
                             Empresas
                         </a>
                     </li>
                     <li class="is-shown @ViewBag.SedeListActive">
                         <a class="menu-item" asp-area="" asp-controller="Sedes" asp-action="Index">
                             <i class="la la-object-group"></i>
                             Sedes
                         </a>
                     </li>
                      <li class="is-shown @ViewBag.GateListActive">
                         <a class="menu-item" asp-area="" asp-controller="Gates" asp-action="Index">
                             <i class="la la-object-group"></i>
                             Gates
                         </a>
                     </li>
                </ul>
           </li>

         
            
          <!--Horarios-->
                    <li class="nav-item has-sub @ViewBag.HorarioMenu">
                 <a class="alert-dark" href="#">
                     <i class="la la-calendar text-dark"></i>
                     <span class="menu-title" data-i18n="">Horarios</span>
                 </a>
                 <ul class="menu-content">
                     <li class="is-shown @ViewBag.HorarioListActive">
                         <a class="menu-item" asp-area="" asp-controller="Horario" asp-action="Index">
                             <i class="la la-hourglass-half"></i>
                             Horarios
                         </a>
                     </li>
                      <li class="is-shown @ViewBag.AsignacionHistoryActive">
                         <a class="menu-item" asp-area="" asp-controller="AdministradorHorarios" asp-action="Index">
                             <i class="la la-hourglass-half"></i>
                             Asignar
                         </a>
                     </li>
                     <li class="is-shown @ViewBag.HorarioHistoryActive">
                         <a class="menu-item" asp-area="" asp-controller="AdministradorHorarios" asp-action="Historico">
                             <i class="la la-calendar-check-o"></i>
                             Historico
                         </a>
                     </li>
                </ul>
           </li>

              
          <!--Usuarios-->
                    <li class="nav-item has-sub @ViewBag.UsuarioMenu">
                 <a class="alert-dark" href="#">
                     <i class="la la-users text-dark"></i>
                     <span class="menu-title" data-i18n="">Usuarios</span>
                 </a>
                  <ul class="menu-content">
                     <li class="is-shown @ViewBag.SistListActive">
                         <a class="menu-item" asp-area="" asp-controller="Cuentas" asp-action="AdmoSistema">
                             <i class="la la-building"></i>
                             Admo Sistema
                         </a>
                     </li>
                </ul>
                 <ul class="menu-content">
                     <li class="is-shown @ViewBag.AdmoEListActive">
                         <a class="menu-item" asp-area="" asp-controller="Cuentas" asp-action="IndexEmpresas">
                             <i class="la la-building"></i>
                             Admo. Empresas
                         </a>
                     </li>
                </ul>
                  <ul class="menu-content">
                     <li class="is-shown @ViewBag.FiscalListActive">
                         <a class="menu-item" asp-area="" asp-controller="Cuentas" asp-action="Fiscalizadores">
                             <i class="la la-building"></i>
                             Fiscalizadores
                         </a>
                     </li>
                </ul>
                 <ul class="menu-content">
                     <li class="is-shown @ViewBag.EmpListActive">
                         <a class="menu-item" asp-area="" asp-controller="Cuentas" asp-action="Empleados">
                             <i class="la la-building"></i>
                             Empleados
                         </a>
                     </li>
                </ul>
                
           </li>

          <!--Marcaciones-->

                <li class="nav-item has-sub @ViewBag.MarcasMenu">
                 <a class="alert-dark" href="#">
                     <i class="la la-users text-dark"></i>
                     <span class="menu-title" data-i18n="">Marcaciones</span>
                 </a>
                  <ul class="menu-content">
                     <li class="is-shown @ViewBag.MarcacionesActive">
                         <a class="menu-item" asp-area="" asp-controller="Marca" asp-action="Index">
                             <i class="la la-building"></i>
                             busquedas
                         </a>
                     </li>
                </ul>
                  <ul class="menu-content">
                     <li class="is-shown @ViewBag.CambiosActive">
                         <a class="menu-item" asp-area="" asp-controller="Cambios" asp-action="Index">
                             <i class="la la-building"></i>
                             Cambios
                         </a>
                     </li>
                </ul>
                <ul class="menu-content">
                     <li class="is-shown @ViewBag.IncidenciasActive">
                         <a class="menu-item" asp-area="" asp-controller="Incidencias" asp-action="Index">
                             <i class="la la-building"></i>
                             Incidencias
                         </a>
                     </li>
                </ul>   
                  <ul class="menu-content">
                     <li class="is-shown @ViewBag.IncidenciasActive">
                         <a class="menu-item" asp-area="" asp-controller="Permisos" asp-action="Index">
                             <i class="la la-building"></i>
                             permisos
                         </a>
                     </li>
                </ul> 
           </li>

               <!--feriado-->

                <li class="nav-item has-sub @ViewBag.FeriadoMenu">
                 <a class="alert-dark" href="#">
                     <i class="la la-users text-dark"></i>
                     <span class="menu-title" data-i18n="">Feriados</span>
                 </a>
                  <ul class="menu-content">
                     <li class="is-shown @ViewBag.FeriadoActive">
                         <a class="menu-item" asp-area="" asp-controller="Feriado" asp-action="Index">
                             <i class="la la-building"></i>
                             Feriados
                         </a>
                     </li>
                </ul>
                  
           </li>
          <!--otro-->
         
        </ul>

                @{
                    string ScreemRole = "???";
                    if (User.IsInRole("SuperAdmin")) ScreemRole = "Super Adminintrador";
                    if (User.IsInRole("Admin")) ScreemRole = "Adminintrador";
                    if (User.IsInRole("Empresa")) ScreemRole = "Empresa";
                    if (User.IsInRole("Empleado")) ScreemRole = "Empleado";
                    if (User.IsInRole("Fiscal")) ScreemRole = "Fiscal";
                }

      </div><a class="btn btn-danger btn-block btn-glow btn-upgrade-pro mx-1" href="https://themeselection.com/products/chameleon-admin-modern-bootstrap-webapp-dashboard-html-template-ui-kit/" target="_blank">@ScreemRole</a>
      <div class="navigation-background"></div>
    </div>

    }
    <!-- Page Content-->
     <div class="app-content content">
      <div class="content-wrapper">
        <div class="content-body">
            <div class="row match-height">
               <main role="main" class="col-12">
                   <div class="mt-2"></div>
                  @RenderBody()
               </main>
            </div>
        </div>
     </div>
    </div>

 
    
    <!-- JS apply-->
    <script src="~/theme/theme-assets/vendors/js/vendors.min.js" type="text/javascript"></script>
    <script src="~/theme/theme-assets/vendors/js/charts/chartist.min.js" type="text/javascript"></script>
    <script src="~/theme/theme-assets/js/core/app-menu-lite.js" type="text/javascript"></script>
    <script src="~/theme/theme-assets/js/core/app-lite.js" type="text/javascript"></script>
    <script src="~/theme/theme-assets/js/scripts/pages/dashboard-lite.js" type="text/javascript"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
