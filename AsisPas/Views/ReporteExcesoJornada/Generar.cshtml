@using AsisPas.Reportes.Excesojornada


@{
    ViewBag.Encabezado = ViewData["Title"] = "Reporte Por Exceso De Jornada";
    ViewBag.ReporteXZActive = "active";
    ViewBag.ReporteMenu = "open";
    ViewBag.ActiveEncabezado = true;
    string mensaje = ViewBag.Err;
    List<ReporteExcesoDeJornada> Reportes = ViewBag.Reportes; 

}

 @if (mensaje != " " && mensaje != "" && mensaje != null)  
 {
     <div class="card-body">
         <div class="alert alert-warning alert-dismissible fade show" role="alert">
             <strong>Mensaje: </strong> @mensaje
         </div>
     </div>
 }
  @if (Reportes == null || Reportes.Count() < 1)  
 {
     <div class="card-body">
         <div class="alert alert-info alert-dismissible fade show" role="alert">
             <strong>Mensaje: </strong> No Hay Datos en este Momento
         </div>
     </div>
 }


@foreach(var reporte in Reportes)
{
    <div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <div class="d-flex align-items-center">
                    <h4 class="card-title text-white"> @reporte.NombreEmpleado </h4>
                </div>
                 
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                    </ul>
                </div>
                <div class="mt-1">
                    <h6 class="card-subtitle text-white">@reporte.RutEmpleado</h6>   
                </div>
                <div class="float-right ml-1">
                    <div class="btn-group center">

                        <form method="post" asp-action="Excel" >

                            <input hidden type="text" id="Empleadoid" name="Empleadoid" value=@reporte.idEmpleado>
                            <input hidden class="form-control" type="date" aria-describedby="addon-wrapping1" value=@ViewBag.fechai name="Finicio" id="Finicio" />
                            <input hidden class="form-control" type="date" aria-describedby="addon-wrapping2" value=@ViewBag.fechaf name="Ffin" id="Ffin" />

                            <button type="submit" class="btn btn-success"><i class="la la-file-excel-o"></i></button>
                        </form>
                           <form asp-action="Pdf" >

                            <input hidden type="text" id="Empleadoid" name="Empleadoid" value=@reporte.idEmpleado>
                            <input hidden class="form-control" type="date" aria-describedby="addon-wrapping1" value=@ViewBag.fechai name="Finicio" id="Finicio" />
                            <input hidden class="form-control" type="date" aria-describedby="addon-wrapping2" value=@ViewBag.fechaf name="Ffin" id="Ffin" />

                            <button type="submit" class="btn btn-light"><i class="la la-file-pdf-o"></i></button>
                        </form>
                           <form asp-action="Word" >

                            <input hidden type="text" id="Empleadoid" name="Empleadoid" value=@reporte.idEmpleado>
                            <input hidden class="form-control" type="date" aria-describedby="addon-wrapping1" value=@ViewBag.fechai name="Finicio" id="Finicio" />
                            <input hidden class="form-control" type="date" aria-describedby="addon-wrapping2" value=@ViewBag.fechaf name="Ffin" id="Ffin" />

                            <button type="submit" class="btn btn-primary"><i class="la la-file-word-o"></i></button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="card-content collapse show">
             <div>
                @if(reporte.Mensaje != "")
                        {
                            <div class="card-body">
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <strong>Mensaje: </strong> @reporte.Mensaje
                                </div>
                            </div>
                        }
                 
                 <ul class="list-group list-group-flush">
                     <li class="list-group-item">
                         Empresa: <strong> @reporte.NombreEmpresa</strong>
                         <br/>
                         RUT: <strong> @reporte.RutEmpresa</strong>
                     </li>
                     <li class="list-group-item">
                        Lugar Pretacion Servicio: @reporte.NombreSede
                         <br/>
                        Direccion: @reporte.DireccionDelaSede
                     </li>
                     <li class="list-group-item">
                        Turno: @reporte.NombreHorario
                     </li>
                     <li class="list-group-item">
                        Periodo: @reporte.inicio.ToString("dd/MM/yyyy") al @reporte.fin.ToString("dd/MM/yyyy")
                     </li>
                     <li class="list-group-item">
                        Tiempo Exceso Del Periodo: @reporte.Exceso.toStr()
                     </li>
                     <li class="list-group-item">
                        Tiempo Atrazo Del Periodo: @reporte.Atrazos.toStr()
                     </li>
                      @if (reporte.AfavorEmpresa)
                      {
                          <li class="list-group-item">
                            Tiempo Que Debe Reponer El Empleado: @reporte.Diferencial.toStr()
                          </li>
                      }
                      else
                      {
                         <li class="list-group-item">
                           Tiempo Que Debe Reponer El Empleador: @reporte.Diferencial.toStr()
                         </li>
                      }
                     
                 </ul>
             </div> 
             <div class="mt-2">
                 <h6 class="card-subtitle text-center">Periodos Semanales</h6>
                 <div class="table-responsive pb-4 pr-4 pl-4">
                    <table id="TableAlau" class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">
                                    Inicia
                                </th>
                                <th scope="col">
                                    finaliza
                                </th>
                                <th scope="col">
                                    Atrazos
                                </th>
                                <th scope="col">
                                    excesos
                                </th>
                                <th scope="col">
                                    Conmpesacion
                                </th>
                                 <th scope="col">
                                    <i class="la la-gears"></i>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if(reporte.Semanales != null && reporte.Semanales.Count > 0)
                                @foreach (var item in reporte.Semanales)
                                {
                                    <tr class="line--hover">
                                        <td scope="row">
                                            @item.inicio.ToString("dd/MM/yyyy")
                                        </td>
                                        <td scope="row">
                                            @item.fin.ToString("dd/MM/yyyy")
                                        </td>
                                        <td scope="row">
                                            @item.Atrazos.toStr()
                                        </td>
                                        <td scope="row">
                                            @item.Exceso.toStr()
                                        </td>
                                          @if (item.AfavorEmpresa)
                                          {
                                              <td scope="row">
                                                El Empleado debe:  @item.Diferencial.toStr()
                                              </td>
                                          }else{
                                              <td scope="row">
                                                  El Empleador debe: @item.Diferencial.toStr()
                                              </td>
                                          }
                                                
                                                <td>
                                        </td>
                                    </tr>

                                }
                        </tbody>
                    </table>
                </div>

             </div>
             
             <div class="mt-2">
                 <h6 class="card-subtitle text-center">Estudio Diarios</h6>
                 <div class="table-responsive pb-4 pr-4 pl-4">
                    <table id="TableAlau" class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">
                                    fecha
                                </th>
                                <th scope="col">
                                    Horario Pactado
                                </th>
                                <th scope="col">
                                    Descanso Pactado
                                </th>
                                <th scope="col">
                                    Horario Laborado
                                </th>
                                <th scope="col">
                                    Descanso Laborado
                                </th>
                                <th scope="col">
                                    Retrazo
                                </th>
                                <th scope="col">
                                    Exceso
                                </th>
                              
                                 <th scope="col">
                                    <i class="la la-gears"></i>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if(reporte.Diarios != null && reporte.Diarios.Count > 0)
                                @foreach (var item in reporte.Diarios)
                                {
                                    <tr class="line--hover">
                                        <td scope="row">
                                            @item.fecha.ToString("dd/MM/yyyy")
                                        </td>
                                        <td scope="row">
                                            @item.Horario.InicioJornada - @item.Horario.FinJornada
                                        </td>
                                        <td scope="row">
                                            @item.Horario.InicioDescanzo - @item.Horario.FinDescazo
                                        </td>
                                         @if (item.Marcas == null)
                                         {
                                              <td scope="row" colspan=2>
                                                Marcas Incompletas
                                             </td>
                                        
                                         }
                                         else
                                         {
                                             <td scope="row">
                                                 @item.Marcas.InicioJornada - @item.Marcas.FinJornada
                                             </td>
                                             <td scope="row">
                                                 @item.Marcas.InicioDescanzo - @item.Marcas.FinDescazo
                                             </td>
                                         }
                                        <td scope="row">
                                          @item.Atrazos.toStr()
                                        </td>
                                        <td scope="row">
                                            @item.Exceso.toStr()
                                        </td>
                                       
                                        <td>
                                            @item.mensaje
                                        </td>
                                    </tr>
                                   

                                }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <h6 class="card-subtitle"> Fecha Solicitud Reporte: @reporte.FechaGenerado.ToString("dd/MM/yyyy") </h6>
            </div>
        </div>
    </div>
</div>
</div>

}