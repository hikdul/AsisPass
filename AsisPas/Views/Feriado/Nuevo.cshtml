
@using AsisPas.DTO;
@using AsisPas.Entitys;
@model FeriadoDTO_in

@{
    ViewBag.Encabezado = ViewData["Title"] = "Agregar Un Feriado";
    ViewBag.FeriadoActive = "active";
    ViewBag.Feriadoenu = "open";
    ViewBag.ActiveEncabezado = true;
    string mensaje = ViewBag.Err;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Guardar" method="post">
            <div class="card">
            
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>           

                    <div class="row">
                        
                     
                        <div class="form-group col-md-6 col-xs-12">
                            <label asp-for="fecha" class="control-label"></label>
                            <input type="date" asp-for="fecha" class="form-control text-to-upper-alau" />
                            <span asp-validation-for="fecha" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6 col-xs-12">
                            <label asp-for="UnaSolaVes" class="control-label"> Tipo Marca</label>
                            <input asp-for="UnaSolaVes" class="form-control text-to-upper-alau" />
                            <span asp-validation-for="UnaSolaVes" class="text-danger"></span>
                        </div>

                        
                    </div>
                    <div class="row">
                      <div class="form-group col-12">
                            <label asp-for="desc" class="control-label">Justifique Incidencia</label>
                            <textarea asp-for="desc" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="desc" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="card-footer form-group text-center m-0">
                    <a class="btn btn-warning rounded-pill" asp-action="Index">Volver</a>
                    <input type="submit" value="Guardar" class="btn btn-danger rounded-pill" />
                </div>

            </div>
        </form>
    </div>
</div>