@using AsisPas.Entitys;
@model IEnumerable<Incidencia>

@{
    ViewBag.Encabezado = ViewData["Title"] = "Incidencias";
    ViewBag.IncidenciastActive = "active";
    ViewBag.MarcasMenu = "open";
    ViewBag.ActiveEncabezado = true;
    string mensaje = ViewBag.Err;
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                   
                        <a asp-controller="Incidencias" asp-action="Crear" alt="Crear Nuevo" class="btn btn-danger btn-add-alau ml-3 mr-2">
                            <i class="ft-plus font-medium-5"></i>
                        </a>
                   
                    <h4 class="card-title"> @ViewBag.Encabezado</h4>
                </div>
                  @if (mensaje != " " && mensaje != "" && mensaje != null)  
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <strong>Mensaje: </strong> @mensaje
                        </div>
                    }
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                  
                </div>
                <div class="table-responsive pb-4 pr-4 pl-4">
                    <table id="TableAlau" class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">
                                    Fecha Objetiva
                                </th>
                                <th scope="col">
                                    Hora
                                </th>
                                <th scope="col">
                                   Tipo Marca
                                </th>
                                <th scope="col">
                                  Solicitante
                                </th>
                                <th scope="col">
                                   Estado
                                </th>
                                <th scope="col">
                                    <i class="la la-gears"></i>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                                @foreach (var item in Model)
                                {
                                    <tr class="line--hover">
                                        <td scope="row">
                                            @item.fecha.ToString("dd/MM/yyyy")
                                        </td>
                                        <td scope="row">
                                            @Html.DisplayFor(modelItem => item.Hora)
                                        </td>
                                        <td scope="row">
                                            @Marca.VerTiposIngresos(item.TipoMarca)
                                        </td>
                                         <td scope="row">
                                            @item.Empleado.user.Rut
                                        </td>
                                         <td scope="row">
                                            @item.Estado
                                        </td>
                                        <td>
                                             <a asp-action="Aprobar" asp-route-id="@item.id" alt="Aprobar" class="la la-edit text-dark">  </a>
                                             <a asp-action="Rechazar" asp-route-id="@item.id" alt="Rechazar" class="la la-remove text-danger">  </a>
                                        </td>
                                    </tr>

                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
