
@using AsisPas.DTO;
@using AsisPas.Entitys;
@model PermisosDTO_in

@{
    ViewBag.Encabezado = ViewData["Title"] = "Generar Incidencia";
    ViewBag.IncidenciastActive = "active";
    ViewBag.MarcasMenu = "open";
    ViewBag.ActiveEncabezado = true;
    string mensaje = ViewBag.Err;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Guardar" method="post">
            <div class="card">
            
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>           

                    <div class="row">
                        
                     
                        <div class="form-group col-md-4 col-xs-12">
                            <label asp-for="inicio" class="control-label"></label>
                            <input type="date" asp-for="inicio" class="form-control text-to-upper-alau" />
                            <span asp-validation-for="inicio" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-4 col-xs-12">
                            <label asp-for="fin" class="control-label"></label>
                            <input type="date" asp-for="fin" class="form-control text-to-upper-alau" />
                            <span asp-validation-for="fin" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-4 col-xs-12">
                            <label asp-for="Empleadoid" class="control-label"> Tipo Marca</label>
                             <select asp-for="Empleadoid" class="form-control" asp-items="@ViewBag.Empleados"></select>
                            <span asp-validation-for="Empleadoid" class="text-danger"></span>
                        </div>

                     

                        
                    </div>
                    <div class="row">
                      <div class="form-group col-md-8 col-xs-12">
                            <label asp-for="Desc" class="control-label">Breve Descripcion del permiso</label>
                            <textarea asp-for="Desc" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Desc" class="text-danger"></span>
                        </div>

                         <div class="form-group col-md-4 col-xs-12">
                            <label asp-for="PruebaFotografica" class="control-label">Ingrese foto(si es necesario)</label>
                            <input type="file" asp-for="PruebaFotografica" />
                            <span asp-validation-for="PruebaFotografica" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="card-footer form-group text-center m-0">
                    <a class="btn btn-warning rounded-pill" asp-action="Index">Volver</a>
                    <input type="submit" value="Guardar" class="btn btn-danger rounded-pill" />
                </div>

            </div>
        </form>
    </div>
</div>