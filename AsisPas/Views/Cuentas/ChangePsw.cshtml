@using AsisPas.DTO
@model CambioContraseña
@{
    ViewBag.Encabezado = ViewData["Title"] = "Cambio de contraseña";
    ViewBag.pswActive = "active";
    ViewBag.CuentasMenu = "open";
    ViewBag.ActiveEncabezado = true;
    string mensaje = ViewBag.Err;

}



<div class="row">
    <div class="col-md-12">
        <form asp-action="Cambiar" method="post">
            <div class="card">
             @if (mensaje != " " && mensaje != "" && mensaje != null)  
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <strong>Mensaje: </strong> @mensaje
                        </div>
                    }
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>           

                    <div class="row">
                        
                     
                        <div class="form-group col-12">
                            <label asp-for="Anterior" class="control-label"></label>
                            <input type="password" asp-for="Anterior" class="form-control text-to-upper-alau" />
                            <span asp-validation-for="Anterior" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                   <div class="form-group col-md-6 col-xs-12">
                            <label asp-for="nueva" class="control-label"></label>
                            <input type="password" asp-for="nueva" class="form-control text-to-upper-alau" />
                            <span asp-validation-for="nueva" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6 col-xs-12">
                            <label asp-for="nueva2" class="control-label"></label>
                            <input asp-for="nueva2" type="password" class="form-control text-to-upper-alau" />
                            <span asp-validation-for="nueva2" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="card-footer form-group text-center m-0">
                    <a class="btn btn-warning rounded-pill" asp-action="Index">Volver</a>
                    <input type="submit" value="Guardar" class="btn btn-danger rounded-pill" />
                </div>

            </div>
        </form>
    </div>
</div>