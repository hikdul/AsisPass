@using AsisPas.DTO
@model UserLogin

@{
    ViewData["Title"] = "Iniciar Sesión || AsisPass";
}

<div class="login-background"></div>
<div class="login-background-base"></div>
<div class="login-box">
    <img class="login-logo" src="~/img/logo.png" alt="FerroCor">
    <h1>Iniciar Sesión</h1>
    <form asp-action="Singin" method="post">

        <label for="email">Correo</label>
        <div class="login-imput-text">
            <img src="https://img.icons8.com/fluent-systems-regular/22/000000/new-post.png" />
            <input asp-for="@Model.Email" class="form-control" type="email" name="email" placeholder="Correo" />
        </div>

        <label for="password">Contraseña</label>
        <div class="login-imput-text">
            <img src="https://img.icons8.com/fluent-systems-regular/22/000000/password--v2.png" />
            <input type="password" asp-for="@Model.Password" name="password" class="form-control" placeholder="Contraseña" />
        </div>
        @if(ViewBag.Message != null)
        {
            <div>
                <p class="text-danger">@ViewBag.Message </p>
            </div>
        }
        <input type="submit" value="Continuar" class="btn" />
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
